@model IEnumerable<Library_managements.Models.DocGia>

@{
    ViewData["Title"] = "Reader List";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

    <div class="main-content">
        <div class="section__content section__content--p30">
            <div class="row">
                <div class="col-md-12">
                    <h3 class="title-5 m-b-35">Reader List</h3>
                    <div class="table-data__tool">
                        <div class="table-data__tool-left">
                            
                        </div>
                        <div class="table-data__tool-right ">
                            <a asp-action="Create" class="au-btn au-btn-icon au-btn--green au-btn--small">


                                <i class="zmdi zmdi-plus"></i>add item

                            </a>
                            
                        </div>
                    </div>
                    <div class="table-responsive table-responsive-data2">
                        <table class="table table-data2">
                            <thead>
                                <tr>
                                    <th>
                                        <label class="au-checkbox">
                                            <input type="checkbox">
                                            <span class="au-checkmark"></span>
                                        </label>
                                    </th>
                                    <th>Reader ID</th>
                                    <th>@Html.DisplayNameFor(model => model.tenDocGia)</th>
                                    <th>@Html.DisplayNameFor(model => model.ngaySinh)</th>
                                    <th>@Html.DisplayNameFor(model => model.diaChi)</th>
                                    <th>@Html.DisplayNameFor(model => model.dienThoai)</th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                <tr class="tr-shadow">
                                    <td>
                                        <label class="au-checkbox">
                                            <input type="checkbox">
                                            <span class="au-checkmark"></span>
                                        </label>
                                    </td>
                                    <td class="desc">
                                        @Html.DisplayFor(modelItem => item.maDocGia)
                                    </td>
                                    <td class="desc">
                                        @Html.DisplayFor(modelItem => item.tenDocGia)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.ngaySinh)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.diaChi)
                                    </td>
                                    <td>
                                        <span class="status--process">@Html.DisplayFor(modelItem => item.dienThoai)</span>
                                    </td>
                                    <td>
                                        <div class="table-data-feature">

                                            <a asp-action="Edit" asp-route-id="@item.maDocGia" class="item" data-toggle="tooltip" data-placement="top" title="Edit">
                                                >
                                                <i class="zmdi zmdi-edit"></i>

                                            </a>
                                            <a asp-action="Details" asp-route-id="@item.maDocGia" class="item" data-toggle="tooltip" data-placement="top" title="More">

                                                <i class="zmdi zmdi-more"></i>

                                            </a>
                                            <a asp-action="Delete" asp-route-id="@item.maDocGia" class="item" data-toggle="tooltip" data-placement="top" title="Delete">

                                                <i class="zmdi zmdi-delete"></i>

                                            </a>
                                        </div>
                                    </td>
                                </tr>
                                    <tr class="spacer"></tr>
                                }
                            </tbody>
                        </table>
                    </div>
                    <!-- END DATA TABLE -->
                </div>
            </div>


        </div>

    </div>
